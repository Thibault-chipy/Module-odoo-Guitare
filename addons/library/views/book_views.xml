<odoo>
    <record id="view_form_book" model="ir.ui.view">
        <field name="name">Book form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="book">
                <sheet>
                    <group col="2">
                        <!-- Colonne de gauche : image seule -->
                        <group>
                            <field name="image" widget="image" options='{"size": [150, 140]}'/>
                        </group>
                        <!-- Colonne de droite : tous les autres champs -->
                        <group>
                            <field name="name"/>
                            <field name="isbn"/>
                            <field name="active"/>
                            <field name="date_published"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_list_book" model="ir.ui.view">
        <field name="name">Book list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="book">
                <field name="name"/>
                <field name="isbn"/>
                <field name="date_published"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_search_book" model="ir.ui.view">
        <field name="name">Tous nos livres</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="book">
                <field name="name"/>
                <field name="isbn"/>
                <filter name="published_before_12_month"
                        string="Sorties rÃ©centes"
                        domain="[('date_published', '>=', (context_today() + relativedelta(months=-12)).strftime('%Y-%m-%d'))]"/>
            </search>
        </field>
    </record>
</odoo>
