<odoo>
    <data>
        
        <template id="list_gear_template" name="Matériel Guitare">
            <t t-call="website.layout">
                <div id="wrap">
                    
                    <div class="oe_structure">
                        <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt48 pb48" data-scroll-background-ratio="1">
                            <div class="container text-center">
                                <h1 class="text-white">Le matériel</h1>
                                <p>Guitares, Pédales et Amplis</p>
                            </div>
                        </section>
                    </div>

                    <div class="container mt-5 mb-5">
                        <div class="row">
                            <t t-foreach="gears" t-as="gear">
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        
                                        <div class="card-img-top text-center p-3 bg-light" style="height: 220px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                            <span t-field="gear.image" 
                                                  t-options="{'widget': 'image', 'class': 'img-fluid', 'style': 'max-height: 100%; object-fit: contain;'}"/>
                                        </div>

                                        <div class="card-body">
                                            <div class="mb-2">
                                                <span t-if="gear.gear_type == 'guitar'" class="badge text-bg-primary">Guitare</span>
                                                <span t-elif="gear.gear_type == 'pedal'" class="badge text-bg-success">Pédale</span>
                                                <span t-elif="gear.gear_type == 'amp'" class="badge text-bg-warning">Ampli</span>
                                                <span t-else="" class="badge text-bg-secondary"><t t-esc="gear.gear_type"/></span>
                                            </div>

                                            <h5 class="card-title text-truncate" t-field="gear.name"/>
                                            
                                            <p class="card-text text-muted small">
                                                <i class="fa fa-industry"/> <span t-field="gear.manufacturer_label"/>
                                            </p>
                                        </div>

                                        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                                            <span class="h5 mb-0 text-primary fw-bold" 
                                                  t-field="gear.price" 
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                            
                                            <small class="text-muted">
                                                <i class="fa fa-music"/> <t t-esc="gear.session_count"/> sessions
                                            </small>
                                        </div>

                                    </div>
                                </div>
                            </t> 
                            </div>
                        
                        <div t-if="not gears" class="alert alert-info text-center">
                            Aucun matériel trouvé dans la base de données.
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <record id="menu_gear_web" model="website.menu">
            <field name="name">Matériel</field>
            <field name="url">/gears</field>
            <field name="parent_id" ref="website.main_menu"/> <field name="sequence" type="int">50</field>
        </record>

    </data>
</odoo>
